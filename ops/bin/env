#!/bin/bash
set -euo pipefail

hash docker 2>/dev/null || die "missing dep: docker"

docker run --rm \
  -v "$(pwd)":/app \
  -v "${HOME}"/.npmrc:/app/.npmrc \
  -v /app/node_modules \
  -w /app \
  -e "REACT_APP_BUILD_NUMBER=${REACT_APP_BUILD_NUMBER:-dev}" \
  -e "CI=true" \
  -it docker.myob.com/sme-web/sme-web-buildnode@sha256:84dcfd8c53df18a710f30e01839ae4578b3c67f84d41d6eba9bf68cbea8e8338 \
  /bin/sh -c "$@"
