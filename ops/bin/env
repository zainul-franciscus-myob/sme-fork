#!/bin/bash
set -euo pipefail

hash docker 2>/dev/null || die "missing dep: docker"

docker run --rm \
  -v "$(pwd)":/app \
  -v /app/node_modules \
  -w /app \
  -e "REACT_APP_BUILD_NUMBER=${REACT_APP_BUILD_NUMBER:-dev}" \
  -e "CI=true" \
  -it docker.myob.com/sme-web/sme-web-buildnode:latest \
  /bin/sh -c "$@"
